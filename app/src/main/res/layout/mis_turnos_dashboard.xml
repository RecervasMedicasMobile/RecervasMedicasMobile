<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisturnosDashboard">

    <!-- Encabezado azul -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/card_view_misturnos_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Turnos"
            android:textColor="@color/dashboard_text_white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Listado de turnos -->
    <LinearLayout
        android:id="@+id/turno_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" />

    <!-- Mensaje de no turnos previos -->
    <TextView
        android:id="@+id/no_turnos_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Usted no posee turnos previos."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Separador -->
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/wave_separator" />
</RelativeLayout>
