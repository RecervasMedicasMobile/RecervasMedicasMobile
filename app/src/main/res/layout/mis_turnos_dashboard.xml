<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisturnosDashboard">

    <!-- Encabezado azul con bot贸n de retroceso -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Bot贸n de retroceso -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="65dp"
            android:layout_height="67dp"
            android:background="@null"
            android:contentDescription="Bot贸n de retroceso"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/card_view_misturnos_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Turnos"
            android:textColor="@color/dashboard_text_white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp" /> <!-- Espaciado entre el bot贸n y el texto -->
    </LinearLayout>

    <!-- Listado de turnos en el centro -->
    <LinearLayout
        android:id="@+id/turno_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        android:padding="16dp" />

    <!-- Mensaje de no turnos previos -->
    <TextView
        android:id="@+id/no_turnos_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usted no posee turnos previos."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Separador -->
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/wave_separator" />

    <!-- Imagen del doctor -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginTop="10dp" /> <!-- Colocar debajo del separador -->

</RelativeLayout>
