<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#151635"
        app:titleTextAppearance="@style/ToolbarTitleTextStyle"
        app:titleTextColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenedor de imagen -->
    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/clinico_inicio"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Título -->

    <!-- Contenedor para los botones -->

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Reservas Médicas Mobile"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@color/azul"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintVertical_bias="0.19"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/btn_contacto"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Contacto"
            android:textColor="#FFFFFF"
            android:background="@color/azul"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_servicios"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Contacto"
            android:textColor="#FFFFFF"
            android:background="@color/azul"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_turnos"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:text="Turnos"
            android:textColor="#FFFFFF"
            android:background="@color/azul"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_registro"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:text="Registro"
            android:textColor="#FFFFFF"
            android:background="@color/azul"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_dashboard"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:text="Perfil"
            android:textColor="#FFFFFF"
            android:background="@color/azul"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:background="@color/azul"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:background="@color/azul"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" /> <!-- Espaciado en la parte inferior -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
