            tools:layout_editor_absoluteY="221dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editTextDecripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
